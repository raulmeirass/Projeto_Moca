<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Moca" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Moca" parent="Base.Theme.Moca" />

    <!-- Estilo personalizado para o Spinner -->
    <style name="MeuEstiloDoSpinner">
        <!-- Cor do texto no Spinner (quando não está selecionado) -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>

        <!-- Cor de fundo do Spinner (quando não está selecionado) -->
        <item name="android:background">@color/white</item>

        <!-- Personalize outros atributos do Spinner conforme necessário -->
    </style>


    <style name="MenuTheme" parent="Theme.MaterialComponents">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/transparent</item>
        <item name="colorSecondaryVariant">@color/azul_splash</item>
        <!-- Cor do icone FAB-->
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/black</item>
    </style>



    <style name="notificacoesSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/verde</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/cinza_texto</item>
    </style>
</resources>